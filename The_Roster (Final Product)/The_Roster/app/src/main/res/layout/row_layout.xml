<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#F0E8D0"
    android:layout_margin="10px"
    android:weightSum="1">

   <TextView
       android:layout_marginTop="10dp"
       android:width="75dp"
       android:layout_marginLeft="25px"
       android:layout_marginRight="10px"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Name here.."
       android:id="@+id/xTextView1_Row"
       android:layout_weight="0.17" />

    <TextView
        android:layout_marginRight="10px"
        android:layout_marginTop="10dp"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:text="Eyecolor here"
        android:id="@+id/xTextView2_Row"
        android:layout_weight="0.02" />

    <TextView
        android:layout_marginRight="10px"
        android:layout_marginTop="10dp"
        android:width="75dp"
        android:padding="20px"
        android:text="DOb here.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xTextView3_Row" />

    <TextView
        android:layout_marginRight="10px"
        android:id="@+id/xTextView4_Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="75dp"
        android:text="status" />

    <TextView
        android:id="@+id/xTextView5_Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.21"
        android:textAlignment="center"
        android:layout_marginLeft="20px"
        android:text="Size" />

</LinearLayout>